@model IEnumerable<AspNetCoreMVC_Study.Models.Contrato>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Contrato Lista</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Contrato" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Criar Novo Contrato
            </a>
        </div>
    </div>

    <br /><br />

    @if(Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Categoria Nome
                            </th>
                            <th>
                                Numero
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                        <tbody>
                            @foreach (var obj in Model)
                            {
                                <tr>
                                    <td width="40%">@obj.Nome</td>
                                    <td width="30%">@obj.Numero</td>
                                    <td class="text-center">
                                        <div class="w-75 btn-group" role="group">
                                            <a asp-controller="Contrato" asp-route-id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-3">
                                                <i class="fas fa-edit"></i> &nbsp; Editar
                                            </a>
                                            <a asp-controller="TipoContrato" asp-route-id="@obj.Id" asp-action="Index" class="btn btn-success mx-3">
                                                <i class="fas fa-trash-alt"></i> &nbsp; Add Tipo
                                            </a>
                                            <a asp-controller="Contrato" asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-3">
                                                <i class="fas fa-trash-alt"></i> &nbsp; Deletar
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                </table>
            }
            else
            {
                <p> Não tem Contratos</p>
            }

</div>